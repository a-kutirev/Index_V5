<Window x:Class="Tours_V5.OldStyle.SelectAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tours_V5.OldStyle"
        mc:Ignorable="d" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Height="120" Width="230">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/WPFControlLibrary;component\Resource\_Button.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <Button Margin="5" Width="100" Name="TourBt" Click="TourBt_Click">
            <TextBlock TextWrapping="Wrap" Text="Новая экскурсия" FontSize="16" FontWeight="Bold" TextAlignment="Center"/>
        </Button>
        <Button Margin="5" Width="100" Name="EventBt" Click="EventBt_Click">
            <TextBlock TextWrapping="Wrap" Text="Новое мероприя-тие" FontSize="16" FontWeight="Bold" TextAlignment="Center"/>
        </Button>
    </StackPanel>
</Window>
