<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SchedLibrary.Resource">
    <ControlTemplate TargetType="Label" x:Key="LabelTmpl">
        <Border CornerRadius="5" BorderThickness="1" BorderBrush="DarkGray" Background="White" Height="25">
            <ContentControl Content="{TemplateBinding Content}" Margin="5,0,5,0" VerticalAlignment="Center"
                            FontFamily="Tahoma" FontSize="14"/>
        </Border>
    </ControlTemplate>
</ResourceDictionary>